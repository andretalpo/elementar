<div class="container-fluid create-news">
    <div class="container-border p-3 mx-3 my-4">
        <form action="/news/create" method="POST">
            <h2 class="mb-3">Cadastro de notÃ­cias</h2>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Ex: http://google.com" name="newsUrl">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="TÃ­tulo" name="title">
            </div>
            <div class="center-text-mobile breakline">
                <div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radioTruth" name="voteRadio" value="truth" class="custom-control-input">
                        <label class="custom-control-label" for="radioTruth">Verdadeira</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radioFake" name="voteRadio" value="fake" class="custom-control-input">
                        <label class="custom-control-label" for="radioFake">Falsa</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Cadastrar</button>
            </div>
        </form>

        <div>
            {{#if errorMessage}}
            <span class="text-danger">{{errorMessage}}</span>
            {{/if}}
        </div>
    </div>
</div>