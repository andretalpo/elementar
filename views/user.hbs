<div class="container-fluid admin-user">
    <div class="container-border p-3 mx-3 my-4">
        <div class="form-group">
            <input type="text" class="form-control" id="username" placeholder="Username" name="username">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="E-mail"
                name="email" disabled>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="name" placeholder="Nome" name="name" disabled>
        </div>
        <div class="form-group">
            <select name="role" class="form-control" id="role">
                <option value="admin">Admin</option>
                <option value="spec">Specialist</option>
                <option value="member">Member</option>
            </select>
        </div>

        <button class="btn btn-primary" id="btn-search-user">Buscar</button>
        <button class="btn btn-primary" id="btn-update-user">Alterar</button>
        <button class="btn btn-primary" id="btn-delete-user">Apagar</button>

        <div>
            <span class="text-danger" id="message">{{message}}</span>
        </div>

        <script src="/javascripts/user.js"></script>
    </div>
</div>